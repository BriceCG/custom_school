<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_student_form" model="ir.ui.view">
            <field name="name">view.student.form</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button string="Print Student" class="btn btn-primary" name="print_student" type="object" />
                    </header>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar" />
                        <div class="oe_title">
                            <h1>
                                <field name="name" />
                            </h1>
                            <h2>
                                <field name="first_name" />
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="date_of_birth" />
                                <field name="age" />
                                <field name="school_id" />
                            </group>
                            <group>
                                <field name="phone" />
                                <field name="email" />
                                <field name="address" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Experience">
                                <field name="experience_ids">
                                    <tree editable="bootom">
                                        <field name="date_from"  />
                                        <field name="date_to" />
                                        <field name="duration" />
                                        <field name="student_company_id" />
                                    </tree>
                            </field>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_student_tree" model="ir.ui.view">
            <field name="name">view.student.tree</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="first_name" />
                    <field name="age" />
                </tree>
            </field>
        </record>

        <record id="action_student_view" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school.student</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">

              </p><p>

              </p>
            </field>
        </record>

        <menuitem
                id="school_main_menu"
                name="School"
                sequence="1"
        />
        <menuitem
                id="student_menu"
                name="Students"
                parent="school_main_menu"
                action="action_student_view"
        />

    </data>
</odoo>